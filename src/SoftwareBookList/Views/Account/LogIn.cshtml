@using SoftwareBookList.Models;
@model LoginViewModel

<div class="container rounded bg-white border border-5 d-flex align-items-center justify-content-center">
    <div class="">
        <div class="col py-4 d-flex align-items-center justify-content-center">
            <div class="justify-content-center">
                <h2 class="pb-2">Login</h2>
                <div>
                    <form method="post">
                        <div class="mb-3">

                            <input asp-for="EmailAddress" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="EmailAddress"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div asp-validation-for="All"></div>
                        <p>
                            <button type="submit" class="btn btn-primary" role="button">Login</button>
                            <a asp-controller="Account" asp-action="SignUp" class="btn btn-secondary" role="button">Create new account</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>