@using SoftwareBookList.Models;
@model SignUpViewModel

<h2 class="text-center pb-3">Become a User Today</h2>
<p class="text-center border-bottom pb-3 ps-3 pe-3">
	Join our community at MySoftwareBookList today and unlock a world of opportunities!
	Connect with like-minded individuals, engage in thought-provoking discussions, and share your knowledge.
	Whether you're a seasoned tech enthusiast or just beginning your journey in the world of software and technology,
	we provide the perfect platform for you to explore, learn, and grow.
</p>


<div class="p-5">
	<form method="post">
		<div class="mb-3">
			<label asp-for="FirstName"></label>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="LastName"></label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="EmailAddress"></label>
			<input asp-for="EmailAddress" class="form-control" />
			<span asp-validation-for="EmailAddress" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PasswordConfirm"></label>
			<input asp-for="PasswordConfirm" class="form-control" />
			<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
		</div>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<p>
			<button type="submit" class="btn btn-primary" role="button">Sign Up</button>

			<a asp-action="Index" asp-controller="Home" class="btn btn-primary" role="button">Cancel</a>
		</p>
	</form>
</div>