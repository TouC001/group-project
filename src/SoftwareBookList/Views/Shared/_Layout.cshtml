<html>
<head>
    <style>:root {--pathBase: "@Context.Request.PathBase";}</style> @* CSS path base variable: use var(--pathBase) when behind reverse proxy. *@
    <script>const pathBase = "@Context.Request.PathBase";</script> @* JavaScript path base variable: use pathBase when behind reverse proxy. *@
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Site1.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="">
        <header>

            <div class="bg-info">
                <div class="row">
                    <div class="col">
                        <h1 class="m-2">MySoftwareBookList</h1>
                    </div>
                    <div class="col text-end mt-3 ms-5 m-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>


            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-4">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse justify-content-center">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <!--
                                    <a class="nav-link text-warning" href="@Url.Action("Index", "Home")">Home</a>

                                    Here we are routing the nav bar links to show which page the user is on. 
                                -->
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "FindBooks" && ViewContext.RouteData.Values["Controller"].ToString() == "Books" ? "active" : "")" href="@Url.Action("FindBooks", "Books")">Books</a>
                            </li>
                            <li class="nav-item">
                                @* <a class="nav-link text-warning" href="@Url.Action("Discussion", "Home")">Discussion</a> *@
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Discussion" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="@Url.Action("Discussion", "Home")">Discussion</a>
                            </li>
                            <li class="nav-item">
                                @* <a class="nav-link text-warning" href="@Url.Action("Account", "Home")">Account</a> *@
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Account" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="@Url.Action("Account", "Home")">Account</a>
                            </li>
                            <li class="nav-item">
                                @* <a class="nav-link text-warning" href="@Url.Action("FindBooks", "Books")">About</a> *@
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "About" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" href="@Url.Action("About", "Home")">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                            </li>

                            <!--
                                <li class="nav-item">
                                <a class="nav-link text-warning" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="@Url.Action("FindBooks", "Books")">Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="@Url.Action("Discussion", "Home")">Discussion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="@Url.Action("Account", "Home")">Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="@Url.Action("About", "Home")">About</a>
                            </li>
                            -->
                        </ul>
                    </div>
                </div>
            </nav>

        </header>

        <div>
            @RenderBody()
        </div>

        <footer class="text-center">
            <hr>
            © MySoftwareBookList @DateTime.Now.Year
        </footer>
    </div>
</body>
</html>
