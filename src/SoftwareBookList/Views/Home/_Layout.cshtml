<html>
<head>
    <style>:root {--pathBase: "@Context.Request.PathBase";}</style> @* CSS path base variable: use var(--pathBase) when behind reverse proxy. *@
    <script>const pathBase = "@Context.Request.PathBase";</script> @* JavaScript path base variable: use pathBase when behind reverse proxy. *@
    <link href="~/css/Site.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header>

            <div class="top-bar">
                <a href="login.html" class="login-button">Login</a>
                <a href="signup.html" class="signup-button">Sign Up</a>
            </div>

            <h1 class="header-title">MySoftware BookList</h1>

            <div>
                <ul class="navbar-nav">
                    <li style="display: inline-block; margin-right: 10px;">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li style="display: inline-block; margin-right: 10px;">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li style="display: inline-block;">
                        <a class="nav-link" href="@Url.Action("Rating", "Home")">Rating</a>
                    </li>
                </ul>
            </div>

        </header>

        <div id="menu" class="nav-menu">
            <div id="right-menu">
                <form action="/search" method="GET" class="search-form">
                    <input type="text" name="q" placeholder="Search..." class="search-input" />
                    <button type="submit" class="search-button">Search</button>
                </form>
            </div>
        </div>

        <div>
            @RenderBody()
        </div>
    
        <footer class="text-center">
            <hr>
            © Software Book @DateTime.Now.Year
        </footer>
    </div>
</body>
</html>
