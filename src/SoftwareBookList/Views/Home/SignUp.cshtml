@using System.Globalization;
@{
    Layout = "_Layout";
}

<div class="container">

    <table class="table">
        <tbody>
            <tr>
                <td>
                    <div class="card p-4">

                        <h2 class="text-center pb-3">Become a User Today</h2>
                        <p class="text-center border-bottom pb-3">
                            Join our community at MySoftwareBookList today and unlock a world of opportunities!
                            Connect with like-minded individuals, engage in thought-provoking discussions, and share your knowledge.
                            Whether you're a seasoned tech enthusiast or just beginning your journey in the world of software and technology, 
                            we provide the perfect platform for you to explore, learn, and grow.
                        </p>

                        <form method="N/A" action="N/A">
                            <div class="form-group pb-3">
                                <label for="email" class="pb-1">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>

                            <div class="form-group pb-3">
                                <label for="username" class="pb-1">Username</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                                <small class="text-muted">(Must be between 3 and 16 characters)</small>
                            </div>

                            <div class="form-group pb-3">
                                <label for="password" class="pb-1">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>

                            <fieldset>
                                <div class="form-group pb-3">
                                    <label for="month">Birthday</label>
                                    <div class="row">
                                        <div class="col">
                                            <select class="form-control">
                                                <option value=" - ">Month</option>
                                                @for (int month = 1; month <= 12; month++)
                                                {
                                                    <option value="@month">@DateTimeFormatInfo.CurrentInfo.GetAbbreviatedMonthName(month)</option>
                                                }
                                                
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-control">
                                                <option value=" - ">Day</option>
                                                @for (int i = 1; i <= 31; i++)
                                                {
                                                    <option value="@i">@i</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col">
                                            @{
                                                int currentYear = DateTime.Now.Year; 
                                                int startYear = 1930; 
                                            }
                                            <select class="form-control">
                                                <option value=" - ">Year</option>
                                                @for (int year = currentYear; year >= startYear; year--)
                                                {
                                                    <option value="@year">@year</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <button type="submit" class="btn btn-primary">Create Account</button>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
