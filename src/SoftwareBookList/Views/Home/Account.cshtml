@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <!-- Profile Picture -->
        <div class="col-md-3">
            <h2>Profile Picture</h2>
            <!-- Include user's profile picture here -->
        </div>
        <!-- User Details -->
        <div class="col-md-9">
           @*  <h2>@Model.UserName's Profile</h2>
            <p>Email: @Model.Email</p>
            <p>Location: @Model.Location</p> *@
            <!-- Add more user details here -->
        </div>
    </div>
</div>

<!-- Activity Feed Section -->
<div class="container mt-5">
    <h2>Activity Feed</h2>
    <ul class="list-group">
        <!-- Add user's activity feed items here -->
        <li class="list-group-item">Activity 1</li>
        <li class="list-group-item">Activity 2</li>
    </ul>
</div>

<!-- Favorite Anime/Manga Section -->
<div class="container mt-5">
    <h2>Favorite Anime and Manga</h2>
    <div class="row">
        <!-- Anime List -->
        <div class="col-md-6">
            <h3>Favorite Anime</h3>
            <ul>
                <!-- Add user's favorite anime items here -->
                <li>Anime 1</li>
                <li>Anime 2</li>
            </ul>
        </div>
        <!-- Manga List -->
        <div class="col-md-6">
            <h3>Favorite Manga</h3>
            <ul>
                <!-- Add user's favorite manga items here -->
                <li>Manga 1</li>
                <li>Manga 2</li>
            </ul>
        </div>
    </div>
</div>