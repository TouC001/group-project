@using SoftwareBookList.Models;
@model UserProfileViewModel;

@{
    Layout = "_Layout";
}

<div class="container mt-5">

    <div class="row">

        <div class="col-md-3">

            <h2>Profile Picture</h2>

            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                @* Added a timestamp to make it so, when a user uploads a new image, it updates right away. *@
                <img width="200" src="@(Model.ProfilePicture.Replace("wwwroot", "") + "?timestamp=" + DateTime.Now.Ticks)" alt="Profile Picture" />
            }

        </div>

        <div class="col-md-9">

            <p><strong>UserName:</strong> @Model.UserName</p>


            <p><strong>Bio:</strong> @Model.Bio</p>


            <p><strong>Birthday:</strong> @Model.Birthday.ToShortDateString()</p>

            <a asp-controller="UserProfile" asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>

        </div>

    </div>

</div>

<!-- Activity Feed Section -->
<div class="container mt-5">
    <h2>Activity Feed</h2>
    <ul class="list-group">
        <!-- Add user's activity feed items here -->
        <li class="list-group-item">Activity 1</li>
        <li class="list-group-item">Activity 2</li>
    </ul>
</div>


<div class="container mt-6">

    <h2>Favorite Software Book</h2>

    <div class="row">

       @* Using the entire page with col-md-12 to make it full width *@
        <div class="col-md-12 border border-2 mb-2">

            <div id="carouselFade" class="carousel slide carousel-fade" data-ride="carousel">

                <div class="carousel-inner">

                   
                </div>

                @* The "Prev" Button to go back. *@
                <button class="carousel-control-prev bg-dark" style="width: 30px;" type="button" data-bs-target="#carouselFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                @* The "Next" Button to go to the next book in the carousel. *@
                <button class="carousel-control-next bg-dark" style="width: 30px;" type="button" data-bs-target="#carouselFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>

        </div>

    </div>

</div>